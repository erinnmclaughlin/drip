@inherits LayoutComponentBase
@using Drip.Services
@inject HttpClient HttpClient
@inject IJSRuntime JsRuntime
@inject OpenApiService OpenApiService
@inject OpenApiStateService StateService
@inject NavigationManager NavigationManager

<div class="app-container">
    <header class="top-bar">
        <div class="top-bar-content">
            <div class="logo">
                <NavLink href="" class="logo-link">
                    <span class="icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 2C10 2 4 9 4 13a6 6 0 0 0 12 0c0-4-6-11-6-11z" fill="#3fa7f4" stroke="none"/>
                            <path d="M10 2C10 2 4 9 4 13a6 6 0 0 0 12 0c0-4-6-11-6-11z" />
                        </svg>
                    </span>
                    <strong>drip</strong>
                </NavLink>
            </div>
            <div class="top-bar-actions">
                @if (StateService.HasDocument)
                {
                    <DocumentSelector />
                }
                <NavLink href="upload" class="upload-link" title="Upload OpenAPI Document">
                    Upload a Document
                </NavLink>
                <button type="button" class="icon-button" title="Toggle Light/Dark Mode" aria-label="Toggle Light/Dark Mode" @onclick="ToggleTheme">
                    @if (_currentTheme == "light")
                    {
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="5"/>
                            <line x1="12" y1="1" x2="12" y2="3"/>
                            <line x1="12" y1="21" x2="12" y2="23"/>
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                            <line x1="1" y1="12" x2="3" y2="12"/>
                            <line x1="21" y1="12" x2="23" y2="12"/>
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                        </svg>
                    }
                    else
                    {
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"/>
                        </svg>
                    }
                </button>
            </div>
        </div>
    </header>
    
    <div class="main-content">
        <CascadingValue Value="OpenApiDocument">
            <aside class="sidebar">
                <SideNav />
            </aside>
            
            <main class="content">
                @if (OpenApiDocument is null)
                {
                    <div class="loading-container">
                        <div class="loading-spinner"></div>
                        <p class="loading-text">Loading API documentation...</p>
                    </div>
                }
                else
                {
                    @Body
                }
            </main>
        </CascadingValue>
    </div>
    
    <!-- Terminal-style status bar -->
    <div class="status-bar">
        <div class="status-left">
            <div class="status-item">
                <span>DRIP</span>
            </div>
            @if (OpenApiDocument != null)
            {
                <div class="status-item">
                    <span>@OpenApiDocument.Info.Title v@(OpenApiDocument.Info.Version)</span>
                </div>
                <div class="status-item">
                    <span>@OpenApiDocument.Paths.Count endpoints</span>
                </div>
            }
        </div>
        <div class="status-right">
            <div class="status-item">
                <span>@_currentTheme.ToUpper()</span>
            </div>
            <div class="status-item">
                <span>@DateTime.Now.ToString("HH:mm")</span>
            </div>
            <div class="status-item">
                <span>@(OpenApiDocument != null ? "READY" : "LOADING")</span>
            </div>
        </div>
    </div>
</div>

@code {
    private string _currentTheme = "dark";
    
    private OpenApiDocument? OpenApiDocument { get; set; }
    private OpenApiDiagnostic? OpenApiDiagnostic { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to document changes
        StateService.OnDocumentChanged += HandleDocumentChanged;
        
        // Load default document if no documents are available
        if (!StateService.AllDocuments.Any())
        {
            var document = await OpenApiService.LoadDefaultDocumentAsync(HttpClient);
            if (document != null)
            {
                StateService.SetDocument(document, "default");
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _currentTheme = await JsRuntime.InvokeAsync<string>("getCurrentTheme");
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        StateService.OnDocumentChanged -= HandleDocumentChanged;
    }

    private async Task ToggleTheme()
    {
        await JsRuntime.InvokeVoidAsync("toggleTheme");
        _currentTheme = await JsRuntime.InvokeAsync<string>("getCurrentTheme");
        StateHasChanged();
    }

    private void HandleDocumentChanged()
    {
        OpenApiDocument = StateService.CurrentDocument;
        StateHasChanged();
    }
}