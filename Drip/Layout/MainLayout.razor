@inherits LayoutComponentBase
@using Drip.Services
@inject HttpClient HttpClient
@inject IJSRuntime JsRuntime
@inject NavigationManager Navigation
@inject OpenApiService OpenApiService
@inject OpenApiStateService StateService

<div class="app-container">
    <header class="top-bar">
        <div class="top-bar-content">
            <div class="logo">
                <NavLink href="" class="logo-link">
                    <span class="icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 2C10 2 4 9 4 13a6 6 0 0 0 12 0c0-4-6-11-6-11z" fill="#3fa7f4" stroke="none"/>
                            <path d="M10 2C10 2 4 9 4 13a6 6 0 0 0 12 0c0-4-6-11-6-11z" />
                        </svg>
                    </span>
                    <strong>drip</strong>
                </NavLink>
            </div>
            <div class="top-bar-actions">
                @if (StateService.IsUploadedDocument)
                {
                    <button type="button" class="default-doc-button" @onclick="LoadDefaultDocument" title="Load Default Document">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 3v18h18"/>
                            <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
                        </svg>
                        <span>Default</span>
                    </button>
                }
                <NavLink href="/upload" class="upload-link" title="Upload OpenAPI Document">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                        <polyline points="7,10 12,15 17,10"/>
                        <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                    <span>Upload</span>
                </NavLink>
                <button type="button" class="icon-button" title="Toggle Light/Dark Mode" aria-label="Toggle Light/Dark Mode" @onclick="ToggleTheme">
                    @if (_currentTheme == "light")
                    {
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="5"/>
                            <line x1="12" y1="1" x2="12" y2="3"/>
                            <line x1="12" y1="21" x2="12" y2="23"/>
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                            <line x1="1" y1="12" x2="3" y2="12"/>
                            <line x1="21" y1="12" x2="23" y2="12"/>
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                        </svg>
                    }
                    else
                    {
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"/>
                        </svg>
                    }
                </button>
            </div>
        </div>
    </header>
    
    <div class="main-content">
        <aside class="sidebar">
            <nav class="sidebar-nav">
                <div class="nav-item">
                    <NavLink Match="NavLinkMatch.All" href="" class="nav-link">
                        <span class="nav-link-text">Home</span>
                    </NavLink>
                </div>
                @if (OpenApiDocument is not null)
                {
                    @foreach (var tag in OpenApiDocument.Tags)
                    {
                        var hasActiveOperation = HasActiveOperationInTag(tag.Name);
                    
                        <div class="nav-item">
                            <NavDropdown ButtonText="@tag.Name" HasActiveOperation="@hasActiveOperation">
                                @foreach (var (path, pathItem) in OpenApiDocument?.Paths ?? [])
                                {
                                    foreach (var (operationType, operation) in pathItem.Operations.Where(o => o.Value.Tags.Contains(tag)))
                                    {
                                        <div class="nav-dropdown-item">
                                            <NavLink href="@(operation.OperationId)" class="nav-link">
                                                <span class="nav-dropdown-icon nav-dropdown-spacer"></span>
                                                <span class="nav-link-text">
                                                    @(operation.Summary ?? path)
                                                </span>
                                                <span class="nav-link-method">
                                                    <OperationTypeTag OperationType="operationType"/>
                                                </span>
                                            </NavLink>
                                        </div>
                                    }
                                }
                            </NavDropdown>
                        </div>
                    }
                }
            </nav>
        </aside>
        
        <main class="content">
            @if (OpenApiDocument is null)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <p class="loading-text">Loading API documentation...</p>
                </div>
            }
            else
            {
                <CascadingValue Value="OpenApiDocument">
                    @Body
                </CascadingValue>
            }
        </main>
    </div>
</div>

@code {
    private string _currentTheme = "dark";
    
    private OpenApiDocument? OpenApiDocument { get; set; }
    private OpenApiDiagnostic? OpenApiDiagnostic { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to document changes
        StateService.OnDocumentChanged += HandleDocumentChanged;
        
        // Load default document if no document is set
        if (!StateService.HasDocument)
        {
            var document = await OpenApiService.LoadDefaultDocumentAsync(HttpClient);
            if (document != null)
            {
                StateService.SetDocument(document, "default");
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _currentTheme = await JsRuntime.InvokeAsync<string>("getCurrentTheme");
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        StateService.OnDocumentChanged -= HandleDocumentChanged;
    }

    private async Task ToggleTheme()
    {
        await JsRuntime.InvokeVoidAsync("toggleTheme");
        _currentTheme = await JsRuntime.InvokeAsync<string>("getCurrentTheme");
        StateHasChanged();
    }

    private async Task LoadDefaultDocument()
    {
        var document = await OpenApiService.LoadDefaultDocumentAsync(HttpClient);
        if (document != null)
        {
            StateService.SetDocument(document, "default");
        }
    }

    private async void HandleDocumentChanged()
    {
        OpenApiDocument = null;
        StateHasChanged();
        
        await Task.Delay(100);

        OpenApiDocument = StateService.CurrentDocument;
        StateHasChanged();
    }

    private bool IsActiveOperation(string operationId)
    {
        var currentUri = Navigation.Uri;
        var segments = currentUri.Split('/', StringSplitOptions.RemoveEmptyEntries);
        return segments.Length > 0 && segments[^1] == operationId;
    }

    private bool HasActiveOperationInTag(string tag)
    {
        if (OpenApiDocument?.Paths == null) return false;
        
        foreach (var (_, pathItem) in OpenApiDocument.Paths)
        {
            foreach (var (_, operation) in pathItem.Operations.Where(o => o.Value.Tags.Any(t => t.Name == tag)))
            {
                if (IsActiveOperation(operation.OperationId))
                {
                    return true;
                }
            }
        }
        return false;
    }
}