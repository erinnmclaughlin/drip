@inherits LayoutComponentBase
@inject HttpClient HttpClient
@inject IJSRuntime JS

<div class="app-container">
    <header class="top-bar">
        <div class="top-bar-content">
            <div class="logo">
                <a href="/" class="logo-link">
                    <strong>drip</strong>
                </a>
            </div>
            <div class="top-bar-actions">
                <button type="button" class="icon-button" title="Toggle Light/Dark Mode" @onclick="ToggleTheme">
                    @if (currentTheme == "light")
                    {
                        <!-- Sun icon -->
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
                    }
                    else
                    {
                        <!-- Moon icon -->
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"/></svg>
                    }
                </button>
            </div>
        </div>
    </header>
    
    <div class="main-content">
        <aside class="sidebar">
            <nav class="sidebar-nav">
                @for (var i = 0; i < OpenApiDocument?.Tags.Count; i++)
                {
                    var index = i;
                    var tag = OpenApiDocument.Tags.ElementAt(i);
                    
                    <div class="nav-item">
                        <div class="nav-dropdown" id="nav-dropdown-@index">
                            <button type="button" class="nav-dropdown-toggle" onclick="document.getElementById('nav-dropdown-@index').classList.toggle('expanded')">
                                <span class="nav-dropdown-icon">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="6,9 12,15 18,9"></polyline>
                                    </svg>
                                </span>
                                <span class="nav-dropdown-text">@tag.Name</span>
                                @if (tag.Description?.Contains("beta", StringComparison.OrdinalIgnoreCase) == true)
                                {
                                    <span class="nav-badge nav-badge-beta">BETA</span>
                                }
                                @if (tag.Description?.Contains("new", StringComparison.OrdinalIgnoreCase) == true)
                                {
                                    <span class="nav-badge nav-badge-new">NEW</span>
                                }
                            </button>
                            <div class="nav-dropdown-content">
                                @foreach (var (path, pathItem) in OpenApiDocument?.Paths ?? [])
                                {
                                    foreach (var (method, operation) in pathItem.Operations.Where(o => o.Value.Tags.Contains(tag)))
                                    {
                                        <div class="nav-dropdown-item">
                                            <a href="@operation.OperationId" class="nav-link">
                                                <span class="nav-dropdown-icon nav-dropdown-spacer"></span>
                                                <span class="nav-link-text">
                                                    @(operation.Summary ?? path)
                                                </span>
                                                <span class="nav-link-method">
                                                    <OperationTypeTag OperationType="method"/>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </nav>
        </aside>
        
        <main class="content">
            @if (OpenApiDocument is null)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <p class="loading-text">Loading API documentation...</p>
                </div>
            }
            else
            {
                <CascadingValue Value="OpenApiDocument">
                    @Body
                </CascadingValue>
            }
        </main>
    </div>
</div>

@code {
    private OpenApiDocument? OpenApiDocument { get; set; }
    private OpenApiDiagnostic? OpenApiDiagnostic { get; set; }
    private string currentTheme = "dark";

    protected override async Task OnInitializedAsync()
    {
        var stream = await HttpClient.GetStreamAsync("petstore.json");
        //var stream = await HttpClient.GetStreamAsync("museum.yaml"); // 3.1.0 is not currently supported
        OpenApiDocument = new OpenApiStreamReader().Read(stream, out var diagnostic);
        OpenApiDiagnostic = diagnostic;
        currentTheme = await JS.InvokeAsync<string>("getCurrentTheme");
    }

    private async Task ToggleTheme()
    {
        await JS.InvokeVoidAsync("toggleTheme");
        currentTheme = await JS.InvokeAsync<string>("getCurrentTheme");
        StateHasChanged();
    }
}