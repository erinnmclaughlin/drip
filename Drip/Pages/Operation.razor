@page "/{OperationId}"

<div class="page-container">
    @if (OpenApiOperation is null)
    {
        <div class="operation-not-found">
            <div class="error-card">
                <h1 class="error-title">Operation Not Found</h1>
                <p class="error-message">The operation <strong>@OperationId</strong> was not found in the API documentation.</p>
                <a href="/" class="back-link">← Back to API Overview</a>
            </div>
        </div>
    }
    else
    {
        <PageTitle>@OpenApiOperation.Summary</PageTitle>
        
        <div class="operation-detail">
            @if (_tag is not null)
            {
                <h1 class="tag-name">@_tag</h1>
            }

            <div class="operation-header">
                <div class="operation-meta">
                    <span class="operation-method">
                        <OperationTypeTag OperationType="OperationMethod"/>
                    </span>
                    <h1 class="operation-title">@(OpenApiOperation.Summary ?? OperationPath)</h1>
                </div>
                <div class="operation-path">
                    <code>@OperationPath</code>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(OpenApiOperation.Description))
            {
                <div class="operation-description">
                    @((MarkupString)Markdown.ToHtml(OpenApiOperation.Description))
                </div>
            }
            
            @if (OpenApiOperation.Parameters?.Any() == true)
            {
                <div class="operation-section">
                    <h2 class="section-title">Parameters</h2>
                    <div class="parameters-list">
                        @foreach (var parameter in OpenApiOperation.Parameters)
                        {
                            <div class="parameter-item">
                                <div class="parameter-header">
                                    <span class="parameter-name">@parameter.Name</span>
                                    <span class="parameter-type">@parameter.Schema?.Type</span>
                                    @if (parameter.Required)
                                    {
                                        <span class="parameter-required">Required</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(parameter.Description))
                                {
                                    <p class="parameter-description">@parameter.Description</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            
            @if (OpenApiOperation.RequestBody != null)
            {
                <div class="operation-section">
                    <h2 class="section-title">Request Body</h2>
                    @if (OpenApiOperation.RequestBody.Required)
                    {
                        <div class="required-indicator">
                            <span class="required-badge">Required</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(OpenApiOperation.RequestBody.Description))
                    {
                        <p class="body-description">@OpenApiOperation.RequestBody.Description</p>
                    }
                    <div class="content-types">
                        <ul>
                            @foreach (var idk in OpenApiOperation.RequestBody.Content.Values.First().Schema.Properties)
                            {
                                <li>@idk.Key</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            
            @if (OpenApiOperation.Responses?.Any() == true)
            {
                <div class="operation-section">
                    <h2 class="section-title">Responses</h2>
                    <div class="responses-list">
                        @foreach (var response in OpenApiOperation.Responses)
                        {
                            <div class="response-item">
                                <div class="response-header">
                                    <span class="response-code">
                                        @if (response.Key == "default")
                                        {
                                            <text>500</text>
                                        }
                                        else
                                        {
                                            <text>@response.Key</text>
                                        }
                                    </span>
                                    <span class="response-description">@response.Value.Description</span>
                                </div>
                                @if (response.Value.Content?.Any() == true)
                                {
                                    <div class="response-content">
                                        schema
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            @if (OpenApiOperation.Parameters?.Any() == true || OpenApiOperation.RequestBody != null)
            {
                <div class="try-it-form">
                    <h2 class="form-title">Try it out</h2>
                    <form @onsubmit="HandleSubmit">
                        @if (OpenApiOperation.Parameters?.Any() == true)
                        {
                            <div class="form-section">
                                <h3 class="section-header">Parameters</h3>
                                @foreach (var parameter in OpenApiOperation.Parameters)
                                {
                                    <div class="form-field">
                                        <label>
                                            <span class="field-label">@parameter.Name</span>
                                            @if (parameter.Required)
                                            {
                                                <span class="required">*</span>
                                            }
                                            <span class="field-type">(@parameter.In)</span>
                                        </label>
                                        <input class="form-input"
                                               value="@parameterValues[parameter.Name]"
                                               placeholder="@parameter.Description"
                                               @oninput="(e => parameterValues[parameter.Name] = e.Value?.ToString() ?? string.Empty)" />
                                    </div>
                                }
                            </div>
                        }
                        @if (OpenApiOperation.RequestBody != null)
                        {
                            <div class="form-section">
                                <h3 class="section-header">Request Body</h3>
                                @if (bodyValues.Count > 0)
                                {
                                    @foreach (var prop in bodyValues.Keys)
                                    {
                                        <div class="form-field">
                                            <label>
                                                <span class="field-label">@prop</span>
                                            </label>
                                            <input class="form-input"
                                                   value="@bodyValues[prop]"
                                                   @oninput="(e => bodyValues[prop] = e.Value?.ToString() ?? string.Empty)" />
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="form-field">
                                        <label>
                                            <span class="field-label">Raw Body</span>
                                        </label>
                                        <textarea class="form-input"
                                                  value="@RawBodyValue"
                                                  @oninput="(e => RawBodyValue = e.Value?.ToString() ?? string.Empty)"></textarea>
                                    </div>
                                }
                            </div>
                        }
                        <button type="submit" class="send-btn">Send Request</button>
                    </form>
                    @if (apiResponse != null)
                    {
                        <div class="response-section">
                            <h4>Response</h4>
                            <pre>@apiResponse</pre>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@code {
    private string? _tag;

    [CascadingParameter]
    public required OpenApiDocument OpenApiDocument { get; set; }
    
    [Parameter]
    public required string OperationId { get; set; }

    [Parameter, SupplyParameterFromQuery]
    public string? Tag { get; set; }

    private OpenApiOperation? OpenApiOperation { get; set; }
    private OperationType OperationMethod { get; set; }
    private string OperationPath { get; set; } = string.Empty;
    
    private Dictionary<string, string> parameterValues = new();
    private Dictionary<string, string> bodyValues = new();
    private string? apiResponse;
    
    private string RawBodyValue
    {
        get => bodyValues.ContainsKey("raw") ? bodyValues["raw"] : string.Empty;
        set => bodyValues["raw"] = value;
    }
    
    protected override void OnParametersSet()
    {
        foreach (var (path, pathItem) in OpenApiDocument.Paths)
        {
            foreach (var (method, operation) in pathItem.Operations)
            {
                if (operation.OperationId == OperationId)
                {
                    OpenApiOperation = operation;
                    OperationMethod = method;
                    OperationPath = path;
                    _tag = Tag ?? operation.Tags.FirstOrDefault()?.Name;

                    parameterValues = OpenApiOperation?.Parameters.ToDictionary(p => p.Name, p => string.Empty) ?? new();
                    bodyValues = OpenApiOperation?.RequestBody.Content.Values.First().Schema.Properties.ToDictionary(c => c.Key, c => string.Empty) ?? new();
                    return;
                }
            }
        }
    }

    private async Task SendApiRequest()
    {
        // For now, just show the collected values
        apiResponse = $"Parameters: {System.Text.Json.JsonSerializer.Serialize(parameterValues)}\n" +
                      $"Body: {System.Text.Json.JsonSerializer.Serialize(bodyValues)}";
    }

    private async Task HandleSubmit(EventArgs e)
    {
        await SendApiRequest();
    }
}