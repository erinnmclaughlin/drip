@using Microsoft.OpenApi.Models
@using System.Text.Json

@if (OpenApiOperation is not null && (OpenApiOperation.Parameters?.Any() == true || OpenApiOperation.RequestBody != null))
{
    <div class="try-it-form">
        <h2 class="form-title">Try it out</h2>
        <form @onsubmit="HandleSubmit">
            @if (OpenApiOperation.Parameters?.Any() == true)
            {
                <div class="form-section">
                    <h3 class="section-header">Parameters</h3>
                    @foreach (var parameter in OpenApiOperation.Parameters)
                    {
                        <div class="form-field">
                            <label>
                                <span class="field-label">@parameter.Name</span>
                                @if (parameter.Required)
                                {
                                    <span class="required">*</span>
                                }
                                <span class="field-type">(@parameter.In)</span>
                            </label>
                            <input class="form-input"
                                   value="@parameterValues[parameter.Name]"
                                   placeholder="@parameter.Description"
                                   @oninput="(e => parameterValues[parameter.Name] = e.Value?.ToString() ?? string.Empty)" />
                        </div>
                    }
                </div>
            }
            @if (OpenApiOperation.RequestBody != null)
            {
                <div class="form-section">
                    <h3 class="section-header">Request Body</h3>
                    @if (bodyValues.Count > 0)
                    {
                        @foreach (var prop in bodyValues.Keys)
                        {
                            <div class="form-field">
                                <label>
                                    <span class="field-label">@prop</span>
                                </label>
                                <input class="form-input"
                                       value="@bodyValues[prop]"
                                       @oninput="(e => bodyValues[prop] = e.Value?.ToString() ?? string.Empty)" />
                            </div>
                        }
                    }
                    else
                    {
                        <div class="form-field">
                            <label>
                                <span class="field-label">Raw Body</span>
                            </label>
                            <textarea class="form-input"
                                      value="@RawBodyValue"
                                      @oninput="(e => RawBodyValue = e.Value?.ToString() ?? string.Empty)"></textarea>
                        </div>
                    }
                </div>
            }
            <button type="submit" class="send-btn">Send Request</button>
        </form>
        @if (apiResponse != null)
        {
            <div class="response-section">
                <h4>Response</h4>
                <pre>@apiResponse</pre>
            </div>
        }
    </div>
} 


@code {
    [Parameter]
    public OpenApiOperation? OpenApiOperation { get; set; }

    private Dictionary<string, string> parameterValues = new();
    private Dictionary<string, string> bodyValues = new();
    private string? apiResponse;

    protected override void OnParametersSet()
    {
        if (OpenApiOperation != null)
        {
            parameterValues = OpenApiOperation.Parameters?.ToDictionary(p => p.Name, p => string.Empty) ?? new();
            if (OpenApiOperation.RequestBody != null && OpenApiOperation.RequestBody.Content.Values.FirstOrDefault()?.Schema?.Properties != null)
            {
                bodyValues = OpenApiOperation.RequestBody.Content.Values.First().Schema.Properties.ToDictionary(c => c.Key, c => string.Empty);
            }
            else
            {
                bodyValues = new();
            }
        }
    }

    private string RawBodyValue
    {
        get => bodyValues.ContainsKey("raw") ? bodyValues["raw"] : string.Empty;
        set => bodyValues["raw"] = value;
    }

    private async Task HandleSubmit(EventArgs e)
    {
        await SendApiRequest();
    }

    private object? ConvertStringToType(string value, OpenApiSchema schema)
    {
        if (string.IsNullOrEmpty(value))
            return null;

        switch (schema.Type)
        {
            case "integer":
                if (int.TryParse(value, out var i)) return i;
                break;
            case "number":
                if (double.TryParse(value, out var d)) return d;
                break;
            case "boolean":
                if (bool.TryParse(value, out var b)) return b;
                break;
            case "array":
                // Split on comma for array input
                if (schema.Items != null)
                {
                    var items = value.Split(',').Select(v => ConvertStringToType(v.Trim(), schema.Items)).ToList();
                    return items;
                }
                break;
            default:
                return value;
        }
        return value; // fallback to string
    }

    private object? BuildRequestBody(OpenApiSchema schema, Dictionary<string, string> values)
    {
        if (schema.Type == "object" && schema.Properties != null)
        {
            var dict = new Dictionary<string, object?>();
            foreach (var prop in schema.Properties)
            {
                if (values.TryGetValue(prop.Key, out var val))
                {
                    dict[prop.Key] = ConvertStringToType(val, prop.Value);
                }
            }
            return dict;
        }
        else if (schema.Type == "array" && schema.Items != null)
        {
            // Assume a single input string for the array, comma-separated
            if (values.TryGetValue("root", out var val))
            {
                return ConvertStringToType(val, schema);
            }
        }
        else if (schema.Type != null)
        {
            if (values.TryGetValue("root", out var val))
            {
                return ConvertStringToType(val, schema);
            }
        }
        return null;
    }

    private Task SendApiRequest()
    {
        // Convert parameters
        var convertedParams = new Dictionary<string, object?>();
        if (OpenApiOperation?.Parameters != null)
        {
            foreach (var parameter in OpenApiOperation.Parameters)
            {
                var val = parameterValues[parameter.Name];
                var converted = ConvertStringToType(val, parameter.Schema);
                convertedParams[parameter.Name] = converted;
            }
        }

        // Convert body
        object? convertedBody = null;
        if (OpenApiOperation?.RequestBody != null)
        {
            var content = OpenApiOperation.RequestBody.Content.FirstOrDefault();
            if (content.Value?.Schema != null)
            {
                convertedBody = BuildRequestBody(content.Value.Schema, bodyValues);
            }
        }

        apiResponse = $"Converted Parameters: {JsonSerializer.Serialize(convertedParams)}\n" +
                      $"Converted Body: {JsonSerializer.Serialize(convertedBody)}";
        return Task.CompletedTask;
    }
}
